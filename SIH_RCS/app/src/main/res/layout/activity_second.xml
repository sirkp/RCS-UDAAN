<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#00ace6">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Flight Details"
            android:textSize="34sp"
            android:gravity="center_vertical"
            android:paddingLeft="40sp"
            android:textColor="#fff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetailsAirline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:paddingLeft="40sp"
            android:text="Airline"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDetailsFlightId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="FC1234"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingLeft="40sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDetailsFromCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DEL"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/lefttorightarrow"
                android:tint="#00ace6"/>

            <TextView
                android:id="@+id/tvDetailsToCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="KNU"
                android:textSize="50sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDetailsFrom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Delhi"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#000"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvDetailsFare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2,450/-"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#000"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvDetailsTo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Kanpur"
                android:textSize="30sp"
                android:textStyle="normal"
                android:textColor="#000"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Departure"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Duration"
                android:textColor="#000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Arrival"
                android:textColor="#000"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDetailsDeparture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="17:30"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDetailsDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1hr 30mins"
                android:textColor="#000"
                android:textStyle=""
                android:gravity="center"/>
            <TextView
                android:id="@+id/tvDetailsArrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="19:00"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"/>
        <Button
            android:id="@+id/btnDetailsProceed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="40dp"
            android:text="proceed "
            android:background="#00ace6"
            android:textColor="#fff"
            android:textSize="34sp"/>


    </LinearLayout>

</LinearLayout>