<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ECEFF1"
    android:id="@+id/ll_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Travellers">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD NUMBERS OF TRAVELLERS"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:id="@+id/adults"
            android:layout_height="0dp"
            android:layout_weight="1">
            
            <RelativeLayout
                android:id="@+id/rl_adult"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_alignParentRight="true"
                    android:elevation="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:background="@drawable/myrect"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_adult_minus"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:clickable="true"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="32sp"
                        />

                    <TextView
                        android:layout_toRightOf="@+id/tv_adult_minus"
                        android:id="@+id/tv_adult_one"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32dp"/>

                    <TextView
                        android:id="@+id/tv_adult_plus"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        android:clickable="true"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/tv_adult_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="32sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_adults"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adults"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_below="@id/tv_adults"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12 yrs and above"/>



                </RelativeLayout>

            </RelativeLayout>
            
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:id="@+id/ll_children"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_children"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:elevation="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:background="@drawable/myrect"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_children_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:clickable="true"
                        android:layout_marginRight="16dp"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_toRightOf="@+id/tv_children_minus"
                        android:id="@+id/tv_children_one"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32dp"/>

                    <TextView
                        android:id="@+id/tv_children_plus"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        android:layout_marginRight="16dp"
                        android:clickable="true"
                        android:layout_toRightOf="@+id/tv_children_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="32sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_infant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp"
                        android:text="Children"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_below="@id/tv_infant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2-12 yrs"/>



                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:id="@+id/ll_infants"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_infant"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_centerInParent="true"
                    android:elevation="10dp"
                    android:layout_width="wrap_content"
                    android:background="@drawable/myrect"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_infant_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:clickable="true"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="32sp" />

                    <TextView
                        android:layout_toRightOf="@+id/tv_infant_minus"
                        android:id="@+id/tv_infant_one"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32dp"/>

                    <TextView
                        android:clickable="true"
                        android:id="@+id/tv_infant_plus"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        android:layout_marginRight="16dp"
                        android:layout_toRightOf="@+id/tv_infant_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textSize="32sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_children"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infant"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_below="@id/tv_children"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Under 2 yrs"/>



                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_marginTop="40dp"
            android:id="@+id/rl_donee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:clickable="true"
                    android:id="@+id/rl_done"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/my_circle">

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="36sp"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"/>
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>