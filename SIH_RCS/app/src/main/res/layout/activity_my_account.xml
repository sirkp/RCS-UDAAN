<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccount"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout

    android:layout_marginTop="0dp"
    android:background="#ECEFF1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:id="@+id/rellay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:background="@drawable/grad"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/profile_icon_1" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_profile_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="107dp"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="24sp"
            android:fontFamily="sans-serif-light"
            android:text="Pradeep Kumar"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="sirkp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEFF1"
        android:layout_below="@+id/rellay1">


        <RelativeLayout
            android:id="@+id/rl_my_bookings"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/myrect">

            <ImageView
                android:id="@+id/my_bookings_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/my_bookings_icon"
                android:paddingBottom="4dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:text="My Bookings"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/view1"
            android:layout_below="@id/rl_my_bookings"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />

        <RelativeLayout
            android:id="@+id/rl_my_wallet"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/myrect"
            >

            <ImageView
                android:id="@+id/my_wallet_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/my_wallet_icon"
                android:paddingBottom="4dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:text="My Wallet"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/view2"
            android:layout_below="@id/rl_my_wallet"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />

        <RelativeLayout
            android:id="@+id/rl_copassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_below="@id/view2"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/myrect"
            >

            <ImageView
                android:id="@+id/copassengers_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/copassengers_icon"
                android:paddingBottom="4dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:text="Co-Passengers"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/view3"
            android:layout_below="@id/rl_copassengers"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />

        <RelativeLayout
            android:id="@+id/rl_logout"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/view3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/myrect"
            >

            <ImageView
                android:id="@+id/logout_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/logout_icon"
                android:paddingBottom="4dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:text="Logout"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />
        </RelativeLayout>
        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_below="@id/rl_logout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />


        <RelativeLayout
            android:id="@+id/rl_switch_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_below="@id/view4"
            android:elevation="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/myrect"
            >

            <ImageView
                android:id="@+id/switch_account_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="8dp"
                android:layout_toRightOf="@id/switch_account_icon"
                android:paddingBottom="4dp"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:text="Switch Account"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />
        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>

</ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#FF00ACE6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</android.support.constraint.ConstraintLayout>