<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassengerDetails"
    tools:showIn="@layout/activity_passenger_details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_slideView"
        android:orientation="vertical"
        android:background="#ECEFF1"
        android:layout_marginTop="26dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Passenger"
            android:textSize="32sp"
            android:background="@drawable/grad_1"
            android:id="@+id/textView"
            android:paddingLeft="8dp"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF"/>

        <EditText
            android:layout_width="match_parent"
            android:background="@drawable/myrect"
            android:paddingLeft="8dp"
            android:id="@+id/et_name"
            android:paddingBottom="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:elevation="5dp"
            android:textSize="32dp"
            android:layout_height="wrap_content"
            android:hint="Full name"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_gender"
            android:background="@drawable/myrect"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:elevation="5dp"
            android:textSize="32dp"
            android:layout_height="wrap_content"
            android:hint="Gender"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_age"
            android:background="@drawable/myrect"
            android:paddingLeft="8dp"
            android:paddingBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:elevation="5dp"
            android:textSize="32dp"
            android:layout_height="wrap_content"
            android:hint="Age"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="1dp"
            android:background="#b2a2a2" />
        <TextView
            android:id="@+id/tv_done"
            android:layout_marginTop="12dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:text="Done"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="@drawable/my_circle"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</LinearLayout>