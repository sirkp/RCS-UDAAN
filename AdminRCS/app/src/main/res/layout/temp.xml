<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewFlightSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="4dp"
        android:elevation="8dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivSearchFlightLogo"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/dummy_user2"
                        android:layout_margin="4dp"
                        android:background="@drawable/my_circle"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/tvSearchFlightAirline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Airlines"
                            android:background="#fff"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:textSize="40dp"/>
                        <TextView
                            android:id="@+id/tvSearchFlightFlightId"
                            android:layout_width="wrap_content"
                            android:background="#fff"
                            android:layout_height="wrap_content"
                            android:text="FC1756"
                            android:textColor="#b000"
                            android:textSize="18dp"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Departure"
                            android:textColor="#000"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Duration"
                            android:textColor="#000"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Arrival"
                            android:textColor="#000"
                            android:gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSearchFlightDeparture"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="17:30"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tvSearchFlightDuration"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="1hr 30mins"
                            android:textColor="#000"
                            android:textStyle=""
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/tvSearchFlightArrival"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="19:00"
                            android:textSize="18sp"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:gravity="center"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSearchFlightDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="03/03/19"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="#00ace6"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7000"/>

    </android.support.v7.widget.CardView>